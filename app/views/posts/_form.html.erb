
	<% if @post.errors.any? %>
	<div id="errors">
		<h2><%= pluralize(@post.errors.count, 'Error') %> prevented you from saving this post</h2>
		<ul>
			<% @post.errors.full_messages.each do |e| %>
				<li><%= e %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= form_for @post do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit 'Submit' %>
	</p>
	<% end %>